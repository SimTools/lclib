#define LCLIB_TMPL "../../../config/lclib.tmpl"
#include LCLIB_TMPL


COMMAND = build

OBJS  = build.o buildm.o cpstrp.o ctoken.o cupper.o \
        lbsdsn.o nindex.o ucstrp.o prompt.o cnvnam.o \
        lnblnk.o rindex.o getcwd_.o



#if defined(AIXArchitecture)
all::
	@echo "*** build command is not suppoted on AIX *** "
#else 
all:: $(COMMAND)
#endif
#if defined(HPArchitecture)
$(COMMAND):: $(OBJS)
	$(FF) -g $(FFLAGS) $(OBJS) -o $(COMMAND) -lU77
#else
$(COMMAND):: $(OBJS)
	$(FF) -g $(FFLAGS) $(OBJS) -o $(COMMAND)
#endif

#if !defined(LinuxArchitecture)
#if defined(PPCArchitecture)
getcwd_.o: getcwd_.c
#elif defined(HPArchitecture)
getcwd_.o: getcwd_.F
	$(FF) -g -c $*.F
#elif defined(hitachiArchitecture)
#if defined(F77FORTRAN)
getcwd_.o: getcwd_.F
	$(CPP) -P  $(CPPOPT) $(INCPATH) $*.F  >  tmp.$*.f
	$(FF) -c $(F77OPTS) -o $*.o tmp.$*.f
	rm -f tmp.$*.f
	mv tmp.$*.o $*.o
#else
getcwd_.o: getcwd_.F
	$(FC) $*.F -c $(F90OPTS) $(CPPOPT) $(INCPATH) $(SHRLIBFLAGS) -o $*.o
#endif /* end of F77FORTRAN */	
#else
getcwd_.o: getcwd_.F
	$(FF) -g -fno-underscoring -c $*.F
#endif
#endif

install::
#ifndef AIXArchitecture
	cp -p $(COMMAND) ../../../bin
#else
	@echo "*** build command is not supported on AIX ***"
#endif

clean::
	rm -f $(OBJS) $(COMMAND)
