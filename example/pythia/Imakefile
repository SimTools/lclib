#
# Imakefile to run PYTHIA generator
#  A.Miyamoto  26-Aug-1996  lclib/96a for HIUX installed.
#
#define LCLIB_TMPL "../../config/lclib.tmpl"
#include LCLIB_TMPL

HOMEDIR  = ../..
LCLIB  = $(HOMEDIR)/lib
HBOOK_LIB = /cern/95a/lib
INCPATH = -I$(HOMEDIR)/util/lcfull/src
LIB  = 	-Wl,-L$(HOMEDIR)/lib -lGENUTIL -lPYTHIA55 -lLUND73 \
	-lSIMJLC -lLCFULL -lTBS -lFORTLIB -lCOM -lCLI \
	$(MYLDOPT)

MAIN  = $(HOMEDIR)/util/lcfull/src/prmain.o 
OBJ = flanli.o 

#ifdef HPArchitecture
MYLDOPT = -lvec -lU77 -Wl,-a,archive -Wl,-L/lib -lm
#endif
#ifdef hitachiArchitecture
MYLDOPT = -lmsl2
#ifdef F90FORTRAN
MYLDOPT = -lmsl2 -Wl,-a,archive -L/lib/pa1.1 -lm
#endif
#endif

####################################################

all:: pythia

pythia: $(OBJ)
	 $(FC) $(FFLAGS) $(MAIN) $(OBJ) $(LIB) -o pythia.ex 

clean:: 
	rm -f *~ core *.o *.ex Makefile *.bak *.a 
	rm -f jobout.runtest PYTHIA.SEED test.data 


